{
  // 插件名称
  "name": "pd tools",
  // 插件的描述
  "description": "chrome tools",
  // 插件的版本
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "pd tools",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  }
}